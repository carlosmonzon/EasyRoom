<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="72dp"
                android:layout_gravity="center_vertical">

    <include
            android:id="@+id/time_range"
            layout="@layout/time_range_view"/>
    <TextView
            android:id="@+id/reservationTitle" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/time_range"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Daily meeting"/>

    <TextView android:id="@+id/reservationUser" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_below="@id/reservationTitle"
              android:layout_toRightOf="@+id/time_range"
              style="@style/Base.TextAppearance.AppCompat.Caption"
              android:text="cmonzon"/>

</RelativeLayout>